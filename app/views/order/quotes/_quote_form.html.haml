- content_for :meta do
  = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true"
  = javascript_include_tag "application"  
  = javascript_include_tag  "geo-autocomplete/geo_autocomplete.js", "geo-autocomplete/jquery.autocomplete_geomod.js"
  / = javascript_include_tag  'geo-autocomplete/jquery-ui-1.8.5.custom.min.js', 'autocomplete-rails.js'
  = stylesheet_link_tag     'jquery-ui-1.8.5.custom.css', "jquery.autocomplete.css"  
  = geo_autocomplete_for :order_quote_pickup_point, :order_quote_dropoff_point 
  
#map-canvas-auto

%h3 Choose your pick-up and drop-off locations
= semantic_form_for @quote do |f|
  = f.inputs do
    = f.input :pickup_point
    = f.input :dropoff_point    
    = f.input :vehicle, :as => :radio, :collection => Courier::Vehicle.available_types
  = f.buttons do
    = f.commit_button :quote
