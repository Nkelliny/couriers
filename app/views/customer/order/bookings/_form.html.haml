- content_for :tab_content do
  = semantic_form_for @booking do |bf|
    #hidden_checkboxes{:class => 'hidden'}
      = bf.input :couriers, :as => :check_boxes, :collection => Courier.available.map(&:number)
    %fieldset#pickup       
      = bf.semantic_fields_for :pickup do |pf|
        = pf.inputs do
          .title Pickup
          = pf.input :street, :label => 'From' 
          #notifier
          = pf.semantic_fields_for :name do |nf| 
            = nf.input :first_name
            = nf.input :last_name 
          = pf.semantic_fields_for :contact_info do |cf| 
            = cf.input :phone
            = cf.input :email
          
    %fieldset#dropoff
      = bf.semantic_fields_for :dropoff do |df|
        = df.inputs do
          .title Dropoff
          = df.input :street, :label => 'To'
          #notifier
          = df.semantic_fields_for :name do |nf| 
            = nf.input :first_name
            = nf.input :last_name
          = df.semantic_fields_for :contact_info do |cf| 
            = cf.input :phone
            = cf.input :email

    = bf.buttons do
      = bf.commit_button :booking